function cuttext($string, $cutoff)
{
    if (mb_strlen($string) < $cutoff) {
        return $string;
    } else {
        // look for a space
        $new_str = mb_substr($string, 0, $cutoff);
        return mb_strrchr($new_str, ' ', true) . '...';
    }
}

